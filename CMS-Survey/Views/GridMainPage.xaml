<Page x:Class="CMS_Survey.Views.GridMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:ExtendedControls="using:MyToolkit.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CMS_Survey.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CMS_Survey.ViewModels" 
      xmlns:data="using:CMS_Survey.Models" mc:Ignorable="d">
   
    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Narrow Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Normal Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Wide Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:PageHeader x:Name="pageHeader" RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True" Text="Main Page">

            <!--  secondary commands  -->
            <controls:PageHeader.SecondaryCommands>
                <AppBarButton Click="{x:Bind ViewModel.GotoSettings}" Label="Settings" />
                <AppBarButton Click="{x:Bind ViewModel.GotoPrivacy}" Label="Privacy" />
                <AppBarButton Click="{x:Bind ViewModel.GotoAbout}" Label="About" />
            </controls:PageHeader.SecondaryCommands>

        </controls:PageHeader>

                <ExtendedControls:DataGrid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="DataGrid" 
                   SelectionMode="Single" DefaultOrderIndex="1" Margin="54,75,-634,-880" ItemsSource="{x:Bind Usersurveys, Mode=OneWay}" 
                                           RowBackgroundEvenBrush="White" RowBackgroundOddBrush="LightBlue" 
                                         SelectionChanged="DataGrid_SelectionChanged"  Grid.RowSpan="1" Width="900" Height="800" HeaderBackground="SteelBlue" >

                    <ExtendedControls:DataGrid.Columns >
                        <ExtendedControls:DataGridTextColumn Width="50" Header="Id"
                  Binding="{Binding surveyKey}"/>

                        <ExtendedControls:DataGridTextColumn Width="*" Header="Provider" Binding="{Binding surveyProvider}" Foreground="Black"/>
                        <ExtendedControls:DataGridTextColumn Width="*" Header="Survey Type" 
                  Binding="{Binding surveyType}" Foreground="Black"/>
                        <ExtendedControls:DataGridTextColumn Width="*" Header="Status" 
                  Binding="{Binding status}" Foreground="Black"/>
                        <ExtendedControls:DataGridTextColumn Width="*" Header="Survey End Date" 
                  Binding="{Binding endDateString}" Foreground="Black"/>
                        <ExtendedControls:DataGridTextColumn Width="*" Header="Action Date" 
                  Binding="{Binding actionDateString}" Foreground="Black" />
               
            </ExtendedControls:DataGrid.Columns>
                    <ExtendedControls:DataGrid.ItemDetailsTemplate>
                        <DataTemplate x:DataType="data:UserSurvey">
                            <StackPanel Margin="12,0,12,12">
                                <!--<TextBlock Text="Details: " FontWeight="Bold" />
                                <TextBlock Text="{x:Bind surveyKey}" TextWrapping="WrapWholeWords" />
                        <TextBlock Text="{x:Bind surveyProvider}" TextWrapping="WrapWholeWords"/>
                        <TextBlock Text="{x:Bind surveyType}" TextWrapping="WrapWholeWords" />
                        <TextBlock Text="{x:Bind status}" TextWrapping="WrapWholeWords" />
                        <TextBlock Text="{x:Bind endDateString}" TextWrapping="WrapWholeWords"/>
                        <TextBlock Text="{x:Bind actionDateString}" TextWrapping="WrapWholeWords"/>-->
                        <Grid HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340">
                            <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Edit_Click"/>
                            <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Click="Delete_Click"/>
                        </Grid>

                        <!--<Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="Edit" Foreground="White" Background="SteelBlue" Content="Edit" Click="Edit_Click"></Button>
                            <Button Name="Delete" Foreground="White" Background="SteelBlue" Content="Delete" Click="Delete_Click" Width="100"></Button>

                        </Grid>-->
                    </StackPanel>
                        </DataTemplate>
                    </ExtendedControls:DataGrid.ItemDetailsTemplate>
                </ExtendedControls:DataGrid>
              
    </RelativePanel>
</Page>

