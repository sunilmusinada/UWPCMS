<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CMS_Survey.Res"
    xmlns:Views="CMS_Survey.Views"
    xmlns:Model="using:CMS_Survey.Models">

    <DataTemplate  x:Key="InProgressTemplate" >
        <StackPanel Margin="12,0,12,12" x:Name="GridPanel">

            <Grid x:Name="ItemGrid" HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340"  >
               
                <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding EditCommand}"/>
                <Button x:Name="View" Content="View" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Command="{Binding ViewCommand}"/>
                <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" Command="{Binding DeleteCommand}"/>
                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left" Width="Auto" Margin="240,10,10,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
    <DataTemplate  x:Key="RejectedTemplate" >
        <StackPanel Margin="12,0,12,12" x:Name="GridPanel">

            <Grid x:Name="ItemGrid" HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340"  >
              
                <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding EditCommand}"/>
                <Button x:Name="View" Content="View" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Command="{Binding ViewCommand}"/>
                <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" Command="{Binding DeleteCommand}"/>
                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left" Width="200" Visibility="Collapsed" Margin="240,10,0,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
    <DataTemplate  x:Key="ApprovedTemplate" >
        <StackPanel Margin="12,0,12,12" x:Name="GridPanel">

            <Grid x:Name="ItemGrid" HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340"  >
                <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="160,10,0,0" Visibility="Collapsed" VerticalAlignment="Top" Command="{Binding EditCommand}"/>
                <Button x:Name="View" Content="View" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding ViewCommand}"/>
                <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="80,10,0,0" Visibility="Collapsed" VerticalAlignment="Top" Command="{Binding DeleteCommand}"/>
                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left" Width="200" Visibility="Collapsed" Margin="240,10,0,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
    <DataTemplate  x:Key="PendingReviewTemplate" >
        <StackPanel Margin="12,0,12,12" x:Name="GridPanel">

            <Grid x:Name="ItemGrid" HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340"  >
                <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="160,10,0,0" Visibility="Collapsed" VerticalAlignment="Top" Command="{Binding EditCommand}"/>
                <Button x:Name="View" Content="View" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding ViewCommand}"/>
                <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Command="{Binding DeleteCommand}"/>
                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left"  Visibility="Collapsed" Margin="240,10,0,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
    <DataTemplate  x:Key="SubmittedTemplate" >
        <StackPanel Margin="12,0,12,12" x:Name="GridPanel">

            <Grid x:Name="ItemGrid" HorizontalAlignment="Left" Height="48"  VerticalAlignment="Top" Width="340"  >
                <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="110,10,0,0" Visibility="Collapsed" VerticalAlignment="Top" Command="{Binding EditCommand}"/>
                <Button x:Name="View" Content="View" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding ViewCommand}"/>
                <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Command="{Binding DeleteCommand}"/>
                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left" Width="200" Visibility="Collapsed" Margin="240,10,0,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
  <!--<local:MyDataTemplateSelector x:Key="TempSelector"
        InProgress="{StaticResource InProgressTemplate}"
        Approved="{StaticResource ApprovedTemplate}">

  </local:MyDataTemplateSelector>-->

</ResourceDictionary>

