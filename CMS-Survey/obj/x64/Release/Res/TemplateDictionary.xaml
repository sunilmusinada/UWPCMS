                <Button x:Name="AddSurveyor" Content="Add Surveyor" HorizontalAlignment="Left"  Margin="225,10,0,0" VerticalAlignment="Top" Command="{Binding AddSurveyorCommand}"/>
                <Button x:Name="Review" Content="Review" HorizontalAlignment="Left" Visibility="Collapsed" Margin="300,10,0,0" VerticalAlignment="Top" Command="{Binding ReViewCommand}"/>
            </Grid>

        </StackPanel>
    </DataTemplate>
